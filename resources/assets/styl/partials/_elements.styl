html,
body
	background-color white
	color darker-blue
	font-family 'Raleway', sans-serif
	font-size font-base
	font-weight 100
	height 100vh
	margin 0
nav
	display flex
	justify-content space-between
	align-items flex-end
	max-width 1440px
	padding-left padding-xl
	padding-right padding-xl
	h1
		font-weight normal
		a
			transition color .8s
			&:hover
				color orange
				transition color .8s
	ul
		list-style-type none
		li
			transition all .7s
			border-bottom 1px solid white
			padding-left padding-m
			padding-right padding-m
			padding-bottom padding-s
			&:hover
				border-bottom 1px solid sky
	a
		text-decoration none
		color inherit
section
	max-width 1440px
	margin-right auto
	margin-left auto
	padding padding-xl

footer
	color white
	background dark-gray
	display flex
	padding padding-xl
	div:not(:last-child)
		padding-right 2em
.copyright
	background gray
	color white
	padding padding-m
	p
		margin 0