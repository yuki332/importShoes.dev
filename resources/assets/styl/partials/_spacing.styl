// margin
.m-b-lg
	margin-bottom 50px
.m-b-md
	margin-bottom 30px
.m-b-sm
	margin-bottom 15px
// height
.full-height
	height 100vh

// width
.width
	&--full
		width 100vw
	&--half
		width 50vw
	&--third
		width 33vw
	&--quarter
		width 25vw

// flex
.flex
	display flex
	&--wrap
		flex-wrap wrap
	&--center
		align-items center
		justify-content center
	&--spbtw
		justify-content space-between
	&--sparnd
		justify-content space-around

// text align
.text
	&--center
		text-align center
	&--right
		text-align right